<ul class="nav-items">
  <% if (!locals.isAdmin) { %>
    <li><a href="/">Comprar</a></li>
    <li><a href="/cart">Carrinho <span class="badge"><%= locals.cart.totalQuantity %></span></a></li>
  <% } %>

  <% if (locals.isAuth && !locals.isAdmin) { %>
    <li><a href="/orders">Pedidos</a></li>
  <% } %>

  <% if (locals.isAdmin) { %>
    <li><a href="/admin/products">Gerenciar Produtos</a></li>
