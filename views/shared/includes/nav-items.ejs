    <li><a href="/signup">Criar Conta</a></li>
    <li><a href="/login">Entrar</a></li>
  <% } %>

  <% if (locals.isAuth) { %>
    <li>
      <form action="/logout" method="POST">
        <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
        <button>Sair</button>
      </form>
